        <th class='text-center' style="vertical-align: bottom;">
          <small>Grocery Stores</small>
        </th>
      </tr>
      <tr>
        <td>Support Local Farms</td>
        <td class="primary-color text-center"><%= fa_icon('check') %></td>
        <td class="text-center"><%= fa_icon('times') %></td>
      </tr>
      <tr>
        <td>The Food is Fresh</td>
        <td class="primary-color text-center"><%= fa_icon('check') %></td>
        <td class="text-center"><%= fa_icon('times') %></td>
      </tr>
      <tr>
        <td>It's Inexpensive</td>
        <td class="primary-color text-center"><%= fa_icon('check') %></td>
        <td class="text-center"><%= fa_icon('times') %></td>
      </tr>
      <tr>
