<!DOCTYPE html>
<html>
<head>
  <title>FindYourFresh</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<nav class="navbar navbar-default navbar-fixed-top navbar-color">
  <div class="container-fluid container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Find Food', farms_path, class: 'navbar-brand', style: 'color:#c9631b;padding-right: 6px;' %><%= fa_icon('leaf', class: 'primary-color', style: 'margin-top: 7px;') %>
    </div>

    <% if user_signed_in? %>
        <% if current_user.farmer? %>
            <%= render('layouts/farmer') %>
        <% elsif current_user.consumer? %>
            <%= render('layouts/consumer') %>
        <% end %>
    <% else %>
        <%= render('layouts/header') %>
    <% end %>

  </div>
</nav>
<span class="notice"><%= notice %></span>
<span class="alert"><%= alert %></span>
<body>

<div class="container">

  <%= yield %>

</div>

</body>

</html>
