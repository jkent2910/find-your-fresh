<div class="container">

  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail text-center">
        <a>
          <%= image_tag (@profile.profile_picture(:medium)), class: 'img-circle', style: "height: 200px !important; width: 200px !important; margin-top: 20px;" %>
        </a>
        <hr>
        <div class="caption">
          <table class="table table-hover">
            <tr>
              <td class="text-center" style="border-top: 0px;"><%= fa_icon('user', class: 'primary-color') %></td>
              <th class="text-left primary-color" style="border-top: 0px;"><%= @profile.first_name %> <%= @profile.last_name %></th>
            </tr>
            <% unless @profile.city.empty? && @profile.state.empty? %>
                <tr>
                  <td class="text-center" style="border-top: 0px;"><%= fa_icon('home', class: 'text-muted') %></td>
                  <td class="text-left primary-color" style="border-top: 0px;"><%= @profile.city %>
                    , <%= @profile.state %></td>
                </tr>
            <% end %>

            <% unless @profile.user.email.empty? %>
                <tr>
                  <td class="text-center" style="border-top: 0px;"><%= fa_icon('envelope', class: 'text-muted') %></td>
                  <td class="text-left primary-color" style="border-top: 0px;"><%= @profile.user.email %></td>
                </tr>
            <% end %>
            <tr>
              <td class="text-muted text-right" style="border-top: 0px;">Wants CSA</td>
              <td class="text-center" style="border-top: 0px;">
                <% if @profile.looking_for_csa == true %>
                    <%= fa_icon('check', class: 'primary-color') %>
                <% else %>
                    <%= fa_icon('times', class: 'text-muted') %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td class="text-muted text-right" style="border-top: 0px;">Wants Split</td>
              <td class="text-center" style="border-top: 0px;">
                <% if @profile.looking_for_split == true %>
                    <%= fa_icon('check', class: 'primary-color') %>
                <% else %>
                    <%= fa_icon('times', class: 'text-muted') %>
                <% end %>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>

    <div class="col-sm-6 col-md-8">


      <div class="thumbnail" style="padding:30px;">
        <span class="pull-right"><%= fa_icon('leaf', class: "primary-color no-photo-index") %></span>
        <div class="caption">
          <h3 class="primary-color">Bio</h3>
          <blockquote class="blockquote-reverse" style="border-right: 5px solid #319f52;">
            <p class="text-muted text-left"><%= @profile.bio %></p>
          </blockquote>
        </div>
      </div>
    </div>
  </div>

</div>